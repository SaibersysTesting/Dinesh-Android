<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.dinesh.sqldatabase.MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SudentDetails"
        android:textSize="20dp"
        android:textColor="#000"
        android:id="@+id/heading"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studentname"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/heading"
        android:textSize="20dp"
        android:textColor="#000"
        android:text="FistName" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/studentlastName"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/studentname"
        android:text="LastName"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/studentlastName"
        android:id="@+id/studentrollNo"
        android:text="RollNumber"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_marginTop="30dp"

        android:layout_below="@+id/studentrollNo"
        android:id="@+id/studentmailId"
        android:text="EmailId"/>
    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/firstName"
        android:layout_alignTop="@+id/studentname"
        android:layout_toEndOf="@+id/studentname" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/last"
        android:layout_alignTop="@+id/studentlastName"
        android:layout_toEndOf="@+id/studentlastName" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/rollNumber"
        android:layout_alignTop="@+id/studentrollNo"
        android:layout_toEndOf="@+id/studentrollNo" />

    <EditText
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:id="@+id/emailid"
        android:layout_alignTop="@+id/studentmailId"
        android:layout_alignEnd="@+id/rollNumber"
        android:layout_toEndOf="@+id/studentmailId" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPA"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_below="@id/studentmailId"
        android:layout_marginTop="30dp"
        android:id="@+id/textView" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_alignParentEnd="true"
        android:id= "@+id/gpa"
        android:layout_toEndOf="@+id/textView" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:id= "@+id/updateid"
        android:layout_below="@+id/gpa"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAllCaps="false"
        android:id="@+id/button"
        android:isScrollContainer="true"
        android:layout_above="@+id/buttonUpdate"
        android:layout_toStartOf="@+id/last" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View "
        android:textAllCaps="false"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button"
        android:layout_alignEnd="@+id/gpa" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button update"
        android:id="@+id/buttonUpdate"

        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/heading" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="id"
        android:textSize="20dp"
        android:textColor="#000"
        android:id="@+id/textView2"
        android:layout_below="@+id/gpa"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Data"
        android:id="@+id/deletebutton"
        android:layout_below="@+id/updateid"
        android:layout_alignEnd="@+id/heading" />
</RelativeLayout>
